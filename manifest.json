{
  "manifest_version": 3,
  "name": "Exploratory Webpage Analyzer",
  "version": "1.0.0",
  "description": "Captura y analiza p√°ginas web generando reportes Markdown.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "action": {
    "default_popup": "src/ui/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content/collector.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
